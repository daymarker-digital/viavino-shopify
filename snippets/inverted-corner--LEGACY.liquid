{%- liquid

  assign border_rgba = border_colour | default: 'none'
  assign fill_rgba = fill_colour | default: 'none'

-%}

{%- unless 'none' == border_colour -%}
  {%- capture border_rgba  -%}
    rgba(var(--theme-colour-{{ border_colour }}), 1)
  {%- endcapture  -%}
{%- endunless -%}

{%- unless 'none' == fill_colour  -%}
  {%- capture fill_rgba  -%}
    rgba(var(--theme-colour-{{ fill_colour }}), 1)
  {%- endcapture  -%}
{%- endunless  -%}

