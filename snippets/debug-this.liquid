{%- liquid

  comment
    Accepts:
    - item: {Anything} Liquid object or anything
    - message: {String} Optionally include a message to be logged
    Usage:
      render 'debug-this',
      item: article_object,
      message: 'Debugging Article'
  endcomment

  assign item = item | default: 'Item not set!'
  assign message = message | default: 'No Message'

-%}

<script>
  console.log({
    message: '{{ message }}',
    item: {{ item | json }},
    type: typeof {{ item | json }}
  });
</script>
