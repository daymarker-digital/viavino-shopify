{%- liquid

  assign section_name = 'page'
  assign section_classes = section_name | append: ' section-' | append: section.id | append: '-padding'
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_id = section_id | append: '--aos'

  assign columns = 'col-12'
  assign container = section.settings.container | default: 'container'

  case section.settings.width
    when "compact"
      assign columns = columns | append: ' col-lg-8 offset-lg-2'
    when "standard"
      assign columns = columns | append: ' col-lg-10 offset-lg-1'
  endcase

  if section.settings.anchor_id != blank
    assign section_id = section.settings.anchor_id
  endif

-%}

{%
  render 'section-styles',
  background: section.settings.background,
  id: section.id,
  padding_bottom: section.settings.padding_bottom
  padding_top: section.settings.padding_top,
%}

<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: columns, container: container %}
    <div class="{{ section_name }}__main" id="{{ aos_id }}">
      <h1 class="{{ section_name }}__title heading--title">{{ page.title | escape }}</h1>
      <div class="{{ section_name }}__content body-copy--1">{{ page.content }}</div>
    </div>
  {% render 'bs-container', state: 'closed', container: container %}
</div>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "content": "Content",
      "type": "header"
    },
    {
      "label": "Width",
      "type": "select",
      "options": [
        {
          "label": "Full",
          "value": "full"
        },
        {
          "label": "Standard",
          "value": "standard"
        },
        {
          "label": "Compact",
          "value": "compact"
        }
      ],
      "default": "full",
      "id": "width"
    },
    {
      "content": "Background",
      "type": "header"
    },
    {
          "label": "Background",
          "type": "select",
          "options": [
            { "label": "Image", "value": "image" },
            { "label": "None", "value": "none" },
            { "label": "Off-black", "value": "off-black" },
            { "label": "Off-white", "value": "off-white" },
            { "label": "Rosa", "value": "rosa" },
            { "label": "Rosso", "value": "rosso" }
          ],
          "default": "none",
          "id": "background"
        },
    {
      "label": "Background Image",
      "type": "image_picker",
      "id": "background_image"
    },
    {
      "label": "Container",
      "type": "select",
      "options": [
        {
          "label": "Static",
          "value": "container"
        },
        {
          "label": "Fluid",
          "value": "container-fluid"
        },
        {
          "label": "Full Width",
          "value": "full-width"
        }
      ],
      "default": "container",
      "id": "container"
    },
    {
      "content": "Padding",
      "type": "header"
    },
    {
      "label": "Top Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_top"
    },
    {
      "label": "Bottom Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_bottom"
    },
    {
      "content": "Anchor",
      "type": "header"
    },
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    }
  ]
}
{% endschema %}
